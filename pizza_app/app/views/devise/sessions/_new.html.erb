
<span><i id="cancel" class="fa fa-window-close" aria-hidden="true"></i></span>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Eg. abc@xyz.com", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "******", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", id: "loginbtn" %>
    <input type="button" id="cancel" value="Cancel"/>
  </div>
<% end %>

    
<%= render "devise/shared/links" %>
