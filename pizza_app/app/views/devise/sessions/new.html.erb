<%= render :partial => "shared/header" %> 

<div class="container">
  <div class="row col-md-12">
    <div id="login-form" class="center-block jumbotron vertical-center">
      <h3>Login</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: "Eg. abc@xyz.com", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, placeholder: "******", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", :class => "btn btn-default text-center col-md-1" %>
        <%= link_to home_splashpage_path, :class => "btn btn-default text-center" do %>
        <span id="Cancel">Cancel</span>
        <% end %>
      </div>
      <% end %>

      <div>
        <%= render "devise/shared/links" %>
      </div>    
    </div>
  </div>
</div>

<%= render :partial => "shared/footer" %> 